{% extends 'base.html.twig' %}
{% block title %}
    Créer un article

{% endblock %}

{% block body %}

    <div class="container">
    <div class="col-md-6 col-md-offset-3 form-horizontal">
        <div class="row">
            <h3 class="text-center">Créer un article </h3>
        </div>
        {{ form_start(form, {'attr':{'action':path('create_article')}}) }}
        <div class="form-group">
            <label class="control-label col-sm-2">Titre:</label>
            <div class="col-sm-10">
                {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Accroche:</label>
            <div class="col-sm-10">
                {{ form_widget(form.lead, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Corps:</label>
            <div class="col-sm-10">
                {{ form_widget(form.body, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Auteur:</label>
            <div class="col-sm-10">
                {{ form_widget(form.createdBy, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="row">
            <a href="{{ path('list_articles') }}" class="btn btn-primary btn-lg active">Retour à la liste</a>
            <button type="submit" class="btn btn-primary btn-lg active pull-right">Soumettre</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}